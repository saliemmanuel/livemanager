# Configuration Django
DEBUG=False
SECRET_KEY=votre-clé-secrète-très-longue-et-complexe-ici
ALLOWED_HOSTS=votre-domaine.com,www.votre-domaine.com,localhost,127.0.0.1

# Configuration de la base de données
DATABASE_URL=postgresql://livemanager:motdepasse@localhost:5432/livemanager_db

# Configuration email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@gmail.com
EMAIL_HOST_PASSWORD=votre-mot-de-passe-app

# Configuration Redis (pour Celery)
REDIS_URL=redis://localhost:6379/0

# Configuration FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg

# Configuration Rsync pour uploads
RSYNC_USER=root
RSYNC_HOST=votre-serveur.com
RSYNC_PATH=/var/www/livemanager/media/videos/

# Configuration de sécurité
CSRF_TRUSTED_ORIGINS=https://votre-domaine.com,https://www.votre-domaine.com

# Configuration des fichiers statiques
STATIC_ROOT=/var/www/livemanager/staticfiles
MEDIA_ROOT=/var/www/livemanager/media

# Configuration de production
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/livemanager/django.log

# Configuration Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=['json']
CELERY_TASK_SERIALIZER='json'
CELERY_RESULT_SERIALIZER='json'
CELERY_TIMEZONE='UTC' 