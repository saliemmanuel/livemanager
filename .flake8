[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    migrations,
    *.pyc,
    *.pyo,
    *.pyd,
    .Python,
    env,
    pip-log.txt,
    pip-delete-this-directory.txt,
    .tox,
    .coverage,
    .coverage.*,
    .cache,
    nosetests.xml,
    coverage.xml,
    *.cover,
    *.log,
    .git,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    *.egg
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401
    # Ignore line too long in migrations
    migrations/*:E501
    # Ignore import order in Django setup scripts
    setup_admin.py:E402
    setup_admin2.py:E402
    create_admin.py:E402 